# Optional path to override default YAML configuration
SNOWDAY_CONFIG_PATH=./config/snow_day.yaml

# Scheduler cadence (cron syntax) and toggle
SNOWDAY_SCHEDULER_CRON=0 6,18 * * *
SNOWDAY_SCHEDULER_ENABLED=true

# Logging options
SNOWDAY_LOG_LEVEL=INFO
SNOWDAY_LOG_JSON=true

# Scoring overrides (examples)
SNOWDAY_SCORING_BASE_SCORE=50
SNOWDAY_SCORING_POWDER_BONUS=12
SNOWDAY_SCORING_ICY_PENALTY=15
